<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up_page">

    <TextView
        android:id="@+id/textView"
        android:layout_width="169dp"
        android:layout_height="73dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/oswald_bold"
        android:text="Sign Up"
        android:textAlignment="textStart"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="362dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/yellow_border"
        android:ems="10"
        android:hint="   Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/signup_pwd"
        android:layout_width="362dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/yellow_border"
        android:ems="10"
        android:hint="   Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_email" />

    <EditText
        android:id="@+id/signup_pwd_confirm"
        android:layout_width="362dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/yellow_border"
        android:ems="10"
        android:hint="   Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwd" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="362dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_style"
        android:text="Sign up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwd_confirm" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_medium"
        android:text="- Or sign up with -"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <ImageView
            android:id="@+id/google_signup"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxWidth="48dp"
            android:maxHeight="48dp"
            android:src="@drawable/google" />

        <ImageView
            android:id="@+id/fb_signup"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxWidth="48dp"
            android:maxHeight="48dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/instagram_signup"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxWidth="48dp"
            android:maxHeight="48dp"
            android:src="@drawable/instagram" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>